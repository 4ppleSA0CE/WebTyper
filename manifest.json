{
  "manifest_version": 2,
  "name": "Web Typer",
  "version": "1.0",
  "description": "Turn any webpage into a typing game",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 